# Shortcuts
alias o="xdg-open"
alias oo="xdg-open ."

# Recursively delete `.DS_Store` files
alias cleanup="find . -type f -name '*.DS_Store' -ls -delete"

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Create a new directory and enter it
function mkd() {
	mkdir -p "$@" && cd "$@"
}

# vim: ft=sh
