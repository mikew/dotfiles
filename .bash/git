# git
alias g="git"
alias gci='git commit'
alias gco='git checkout'
alias gst='git status'
alias gdi='git diff'
alias gfa='git fetch --all'

# git pendantic
alias gs='gst'
alias gd='gdi'

# Git commit message, an alias won't do
gcm () {
  local message=$*
  git commit --message "$message"
}

# Git clean WARNING!
git_clean_all () {
  git_reset_file .
  git clean -df .
}

git_reset_file () {
  local filename="$1"
  git reset HEAD "$filename"
  git checkout -- "$filename"
}

gcl () {
  local filename="$1"
  if [[ -n "$filename" ]]; then
    git_clean_all
  else
    git_reset_file "$filename"
  fi
}

git-new-branch() {
  git stash
  git checkout master
  git fetch --all
  git pull origin master
  git checkout -b "new-branch-$(date +%s)"
  git stash apply
}

# vim: ft=sh
